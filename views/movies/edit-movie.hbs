<h2>Edit the movie</h2>

<form action="/movies/{{movie._id}}/edit" method="POST">
    <label for="title" class="label">Title</label><input type="text" class="input" name="title" id="title" value="{{movie.title}}">
    <label for="gere" class="label">Genre</label><input type="text" class="input" name="genre" id="genre" value="{{movie.genre}}">
    <label for="plot" class="label">Plot</label><input type="text" class="input" name="plot" id="plot" value="{{movie.plot}}">
    <label for="cast" class="label">Cast</label>
    <select class="input" name="cast" id="cast" multiple>
        {{#each celebrities}}
            <option value={{_id}}>{{name}}</option>
        {{/each}}
    </select>
    <button class="btn">Edit</button>
</form>